<section id="new-employee" class="col-md-4">
  <h1>Add employee</h1>
  <%= form_for :employee, url: employees_path do |f| %>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "ID" %><br>
    <%= f.text_field :bekk_id, class: "form-control" %>
  </div>

  <%= f.submit class: 'btn btn-default' %>
  <% end %>
</section>
