<section id="employee" class="col-md-8">
  <h1>Employee</h1>

  <%= link_to 'Overview', employees_path %>

  <p><%= @employee.name %> (<%= @employee.bekk_id %>)<p>

  <% @employee.notes.order('added_at desc').each do |n| %>
    <p><%= n.added_at %></p>
    <p><%= n.note %></p>
  <% end %>


  <h2>Note:</h2>
  <%= form_for([@employee, @employee.notes.build]) do |f| %>
  <div class="form-group">
    <%= f.label :date %>
    <div class="input-group col-md-4 date">
      <%= f.text_field :added_at, class: 'form-control' %>
      <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :note %>
    <%= f.text_area :note, class: "form-control", rows: 3 %>
  </div>
  <%= f.submit class: "btn btn-default" %>
  <% end %>
<section>
